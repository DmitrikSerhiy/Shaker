@page "/cocktails"
@inject HttpClient Http

<PageTitle>Available cocktails</PageTitle>

<h1>Available cocktails</h1>

<p>This is the list of available cocktails</p>

@if (cocktails == null) {
    <p>
        <em>Loading...</em>
    </p>
}
else {
    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Temp. (C)</th>
            <th>Temp. (F)</th>
            <th>Summary</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var cocktail in cocktails) {
            <tr>
                <td>@cocktail.Date.ToShortDateString()</td>
                <td>@cocktail.TemperatureC</td>
                <td>@cocktail.TemperatureF</td>
                <td>@cocktail.Summary</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private WeatherForecast[]? cocktails;

    protected override async Task OnInitializedAsync() {
        cocktails = await Http.GetFromJsonAsync<WeatherForecast[]>("sample-data/weather.json");
    }

    public class WeatherForecast {
        public DateOnly Date { get; set; }

        public int TemperatureC { get; set; }

        public string? Summary { get; set; }

        public int TemperatureF => 32 + (int)(TemperatureC / 0.5556);
    }

}